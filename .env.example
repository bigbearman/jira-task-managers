# ============================================
# App
# ============================================
NODE_ENV=development
PORT=3000
IS_API=1
IS_WORKER=1
IS_BOT=0
API_KEY=

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5436
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=multi_jira
DB_SYNC=true
DB_LOGGING=false
DB_SSL=false

# Docker internal ports
FORWARD_DB_PORT=5436
FORWARD_REDIS_PORT=6382

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6382
REDIS_PASSWORD=
REDIS_DATABASE=0

# ============================================
# Jira (configured per instance via API, these are defaults)
# ============================================
JIRA_API_VERSION=3
JIRA_CACHE_PROJECTS_TTL=3600
JIRA_CACHE_TASKS_TTL=300
JIRA_RATE_LIMIT_MS=100
JIRA_SYNC_BATCH_SIZE=50
JIRA_SYNC_MAX_RETRIES=3

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_CHAT_IDS=
TELEGRAM_POLLING_ENABLED=true

# ============================================
# Claude CLI
# ============================================
CLAUDE_CLI_PATH=claude
CLAUDE_DEFAULT_MODEL=sonnet
CLAUDE_MAX_TOKENS=8192
CLAUDE_TIMEOUT_MS=300000
CLAUDE_ALLOWED_TOOLS=Edit,Write,Bash,Read,Glob,Grep

# ============================================
# Git
# ============================================
GIT_DEFAULT_BASE_BRANCH=develop
GIT_BRANCH_PREFIX=feature/
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true
GIT_AUTO_CREATE_PR=true
GH_CLI_PATH=gh

# ============================================
# Web UI
# ============================================
WEB_PORT=3001
API_URL=http://api:3000

# ============================================
# Nginx
# ============================================
NGINX_PORT=8080
API_PORT=3000
